{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "id",
    "balance"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "integer",
      "title": "The Id Schema",
      "default": 0,
      "examples": [
        10
      ]
    },
    "balance": {
      "$id": "#/properties/balance",
      "type": "number",
      "title": "The Balance Schema",
      "default": 0.0,
      "examples": [
        10.5
      ]
    }
  }
}